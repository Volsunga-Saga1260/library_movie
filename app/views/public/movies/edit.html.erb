<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <h1 class="text-center">〜感想編集〜</h1>
      <%= form_with model:@movie, local: true do |f| %>
        <h4>感想タイトル</h4>
        <%= f.text_field :title, class:"form-control" %>
        <h4>原作タイトル</h4>
        <%= f.text_field :original, class:"form-control" %>
        <h4 class="mt-3">ジャンル</h4>
          <%= f.collection_select(:genre_id, @genres, :id, :name) %>
        <div id="evaluate_stars">
          <h4 class="mt-3">評価</h4>
        </div>
        <h4>本文</h4>
        <%= f.text_area :text, rows:"7", class:"form-control" %>
        <div class="mt-3">
          <%= f.submit '編集保存', class:"btn btn-primary btn-block" %>
        </div>
      <% end %>
        <div class="mt-3">
          <%=link_to'マイページへ戻る', customers_path(current_customer), class:"btn btn-info btn-block" %>
        </div>
    </div>

    <div class="col-sm-3"></div>
  </div>
</div>
<script>
  $('#evaluate_stars').raty({
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: 'movie[evaluation]' //登録するモデル名とカラム名を記述
  });
</script>
