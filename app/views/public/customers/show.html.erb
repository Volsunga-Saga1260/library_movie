<div class="container">

  <div class="row my-3">
    <div class="col-12">
      <tr>
          <h1 class="text-center my-3">アカウント情報</h1>
      </tr>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8"></div>
    <div class="col-sm-2"></div>
    <div class="col-sm-2 my-3">
      <% if current_customer.following?(@customer) %>
        <%= link_to "フォロー外す", customer_relationships_path(@customer.id), method: :delete, class: "btn btn-danger btn-block" %>
      <% else %>
        <%= link_to "フォローする", customer_relationships_path(@customer.id), method: :post, class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-12">
      <table class="table table-bordered">
         <tr class="text-center">
          <td colspan="3"><h3><strong>アカウント情報</strong></h3></td>
        </tr>
        <tr class="text-center">
          <td colspan="3">
            <%= attachment_image_tag @customer, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
            <strong>アカウント名：</strong><%= @customer.name %>
          </td>
        </tr>
        <tr>
          <td class="col-6"><strong>好きな動画：</strong><%= @customer.original %></td>
          <td class="col-3"></td>
          <td class="col-3"></td>
        </tr>
        <tr class="inpressions">
          <td colspan="3"><strong>自己紹介：</strong><%= @customer.introduction %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-12">
      <h3 class="text-center"><strong>アカウントの投稿一覧</strong></h3>
      <% @movies.each do |movie| %>
        <table class="table table-bordered">
          <tr>
            <td class="align-middle" colspan="2"><strong>感想タイトル：</strong><%= movie.title %></td>
            <td class="col-sm-2 text-center">
               <%= link_to '詳細', movie_path(movie.id), class:"btn btn-success btn-block" %>
            </td>
          </tr>
          <tr>
            <td class="col-sm-8" colspan="2"><strong>原作：</strong><%= movie.original %></td>
            <td class="col-sm-4 text-center"><strong>ジャンル：</strong><%= movie.genre.present? ? movie.genre.name : 'unknown' %></td>
          </tr>
          <tr class="text-center">
            <td class="col-sm-4 movie-evaluation" data-score="<%= movie.evaluation %>"></td>
            <td class="col-sm-4">♥<%= movie.favorites.count %> いいね</td>
            <td class="col-sm-4"></td>
          </tr>
        </table>
        <br>
      <% end %>
    </div>
  </div>
  <div class="my-3"><%= paginate @movies %></div>
</div>