<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <h1>ユーザー登録編集</h1>
      <%= form_with model:@customer, local: true do |f| %>
        <h4>アカウント名</h4>
        <%= f.text_field :name, class:"form-control" %>

        <p><%= attachment_image_tag @customer, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%></p>
        <label for="inputImage">Image</label>
        <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>

        <h4>紹介文</h4>
        <%= f.text_area :introduction, rows:"7", class:"form-control" %>
        <%= f.submit '編集保存', class:"btn btn-primary btn-block" %>
      <% end %>
      <div class="my-3">
       <%= link_to "退会", erase_customers_path(@customer.id), class:"btn btn-primary btn-block" %>
      </div>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
