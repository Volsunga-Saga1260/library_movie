<div class="container">
  <div class="my-3">
    <h2>ログイン</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table class="form">
      <tbody>
        <tr class="form-group row">
          <td class="col-md-5"><%= f.label :メールアドレス %><td>
          <td class="col-md-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr class="form-group row">
          <td class="col-md-5"><%= f.label :パスワード %><td>
          <td class="col-md-6"><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <%= f.submit "ログイン", class:"btn btn-success" %>
    
      <% end %>
    
      <div class="col-md-3"><%= render "devise/shared/links" %></div>
    </div>
</div>
