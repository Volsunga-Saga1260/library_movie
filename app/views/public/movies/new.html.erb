<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <h1>新規投稿</h1>
      <%= form_with model:@movie, local:true do |f| %>
        <h4>感想タイトル</h4>
        <%= f.text_field :title, class:"form-control" %>
        <h4>原作タイトル</h4>
        <%= f.text_field :original, class:"form-control" %>
        <h4>ジャンル</h4>
        <%= f.collection_select(:genre_id, @genres, :id, :name) %>
        <div id="evaluate_stars">
          <label>評価</label>
        </div>
        <h4>本文</h4>
        <%= f.text_area :text, rows:"7", class:"form-control" %>
        <%= f.submit '投稿', class:"btn btn-primary btn-block" %>
      <% end %>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>

<script>
  $('#evaluate_stars').raty({
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: 'movie[evaluation]' //登録するモデル名とカラム名を記述
  });
</script>
