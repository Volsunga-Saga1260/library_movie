<div class="container">
  <%= flash[:success] %>
  <div class="row my-3">
    <div class="col-sm-3 border">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
             <h3 align="center">ユーザー情報</h3>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td align="center"><P><%= attachment_image_tag @customer, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p></td>
          </tr>
          <tr>
            <td><%= @customer.name %></td>
          <tr>
          <tr>
            <td><%= @customer.introduction %></td>
          </tr>
          <tr>
            <td><%= link_to "編集", edit_customer_path(@customer.id), class:"btn btn-primary btn-block" %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-sm-9">
      <h1>index</h1>
      <% @movies.each do |movie| %>
        <table class="table table-bordered">
          <tr>
            <td class="align-middle" colspan="2">感想タイトル：<%= movie.title %>
            </td>
            <td class="col-sm-2">
              <%= link_to '編集', edit_movie_path(movie.id), class:"btn btn-success" %>
              <%= link_to '削除', movie_path(movie), method: :delete, "data-confirm" => "本当に消しますか", class:"btn btn-success" %>
            </td>
          </tr>
          <tr>
            <td class="col-sm-4">原作：<%= movie.original %></td>
            <td class="col-sm-3">ジャンル：<%= movie.genre.present? ? movie.genre.name : 'unknown' %></td>
            <td class="col-sm-2">♥<%= movie.favorites.count %> いいね</td>
          </tr>
          <tr>
            <td class="movie-evaluation" data-score="<%= movie.evaluation %>"></td>
          </tr>
         </table>
        <br>
        <% end %>
    </div>
  </div>

  <p><%= paginate @movies %></p>

</div>

