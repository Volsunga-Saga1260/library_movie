<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <h1>Public::Movies#edit</h1>
      <%= form_with model:@movie, local: true do |f| %>
        <h4>感想タイトル</h4>
        <%= f.text_field :title, class:"form-control" %>
        <h4>原作タイトル</h4>
        <%= f.text_field :original, class:"form-control" %>
        <h4>本文</h4>
        <%= f.text_area :text, rows:"7", class:"form-control" %>
        <%= f.submit '編集保存', class:"btn btn-primary btn-block" %>
      <% end %>
    </div>

    <div class="col-sm-3"></div>
  </div>
</div>
